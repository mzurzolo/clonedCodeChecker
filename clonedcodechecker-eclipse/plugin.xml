<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="clonedcodechecker-eclipse.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="clonedcodechecker-eclipse.commands.category"
            name="Sample Command"
            id="clonedcodechecker-eclipse.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="clonedcodecheckereclipse.handlers.ProcessLaunchHandler"
            commandId="clonedcodechecker-eclipse.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="clonedcodechecker-eclipse.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="clonedcodechecker-eclipse.toolbars.sampleToolbar">
            <command
                  id="clonedcodechecker-eclipse.toolbars.sampleCommand"
                  commandId="clonedcodechecker-eclipse.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="Run Cloned Code Checker">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
